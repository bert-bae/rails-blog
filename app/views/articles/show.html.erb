<div id="root">
  <h1><%= @article.title %></h1>
  <p><i>Publish date: <%= @article.created_at.strftime("%Y-%m-%d") %></i></p>
  <p><%= @article.body %></p>
  <%= link_to "Edit", edit_article_path(@article) %><br>
  <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?" } %>
</div>