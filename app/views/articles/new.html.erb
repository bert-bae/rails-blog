<div id="root">
  <h1>Write Article</h1>
  <%=  form_with model: @article do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter article title..." %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, placeholder: "Enter article content..." %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
  <% end %>
</div>