<%=  form_with model: @article do |form| %>
<div class="form-group">
  <%= form.label :title %>
  <%= form.text_field :title, placeholder: "Enter article title..." %>

  <% if @article.errors.full_messages_for(:title).length > 0 %>
  <div class="error">
    <% @article.errors.full_messages_for(:title).each do |msg| %>
    <p><%= msg %></p>
    <% end %>
  </div>
  <% end %>
</div>

<div class="form-group">
  <%= form.label :body %>
  <%= form.text_area :body, placeholder: "Enter article content..." %>

  <% if @article.errors.full_messages_for(:body).length > 0 %>
  <div class="error">
    <% @article.errors.full_messages_for(:body).each do |msg| %>
    <p><%= msg %></p>
    <% end %>
  </div>
  <% end %>
</div>

<div class="form-group">
  <%= form.label :status %>
  <%= form.select :status, ['public', 'private', 'archived'] %>
</div>

<div class="form-group">
  <%= form.submit %>
</div>
<% end %>