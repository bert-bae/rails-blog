<div class="comments-list">
  <h3>Comments</h3>
  <% if @article.comments.length > 1 %>
  <% @article.comments.each do |comment| %>
  <% unless comment.archived? %>
  <div class="comment-block">
    <p>By: <strong><%= comment.commenter %></strong></p>
    <p><%= comment.body %></p>
    <p>
      <%= link_to "Delete comment", [comment.article, comment], 
        method: :delete,
        data: {confirm: "Are you sure?"} %>
    </p>
  </div>
  <% end %>
  <% end %>
  <% else %>
  <p>No comments. Be the first to comment on this piece!</p>
  <% end %>
</div>