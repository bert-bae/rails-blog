<div class="comment-input">
  <h3>Add a comment</h3>
  <%= form_with model: [@article, @article.comments.build] do |f| %>

  <p><%= f.label :commenter %></p>
  <p><%= f.text_field :commenter %></p>

  <p><%= f.label :body %></p>
  <p><%= f.text_area :body, placeholder: "Enter comment..." %> </p>

  <p><%= f.label :status %></p>
  <p><%= f.select :status, ['public', 'private', 'archived'], selected: 'public' %></p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>
</div>